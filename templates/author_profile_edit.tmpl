<section>
	<h1>Edit Profile</h1>
</section>

<section>		
	<div>
		<form action="<%= __SCRIPT__ %>/profile/save" method="post">
 		 	<fieldset class="table_like">
				<dl>
					<dt><label for="user_name">Username</label></dt>
					<dd>
						<span id="user_name"><%= user_name %></span>
					</dd>
	
					<dt><label for="mail">E-mail</label></dt>
					<dd>
						<input type="text" name="mail" id="mail" value="<%= mail %>" />
					</dd>
	
					<dt><label for="website">Website</label></dt>
					<dd>
						<input type="text" name="website" id="website" value="<%= website %>" />
					</dd>
	
					<dt class="empty">&nbsp;</dt>
					<dd class="right">
						<button type="submit" value="Save profile">
          		Save profile
     				</button>
					</dd>
				</dl>
			</fieldset>
		</form>
	</div>
</section>
